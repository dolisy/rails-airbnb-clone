<main class="pa4 black-80">
  <form class="form-center measure center">
    <legend class="f4 fw6 ph0 mh0">Sign In</legend>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: false, label_html: { class: 'db fw6 lh-copy f6' } %>
        <%= f.input :password, required: false, label_html: { class: 'db fw6 lh-copy f6' } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "b ph3 pv2 input-reset ba b--black bg-transparent pointer f6 dib" %>
      </div>
    <% end %>
  </form>
</main>

<%= render "devise/shared/links" %>
