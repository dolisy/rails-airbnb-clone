<div class="wrapper">
  <h4 class="confirm-text">Confirm Your Booking:</h4>
  <div class="confirmation-content">
    <div class="book-container">
      <div class="text-container">
        <h4><%= @booking.book.title %></h4>
        <p class="date">Pick up: <%= @booking.checkin_date %></p>
        <p class="date">Return: <%= @booking.checkout_date %></p>
      </div>
      <% if @booking.book.photo? %>
        <%= cl_image_tag @booking.book.photo.path, width: 200, height: 300, crop: :fill %>
      <% else %>
        <img src="https://unsplash.it/400/500?image=1083" alt="picture of book" class="checkout-image">
      <% end %>
      </div>
    <div class="row center">
      <%= link_to 'Back', book_path(@booking.book), class: "btn btn-primary" %>
      <a class="btn btn-primary" href="#">
        Go to Payment
      </a>
    </div>
  </div>
</div>

