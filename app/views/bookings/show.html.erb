<article class="cf ph2 ph5-ns pt3 mb2">
  <header class="fl w-100 w-50-ns pr4-ns">
    <h1 class="mt2 bt bw1 book-title f3 black lh-title fw9 mt0 pt1">
      <%= @booking.book.title %>
    </h1>
    <h2 class="author f10 mid-gray lh-title">
      <% if @booking.book.author != "" %>
        <%= @booking.book.author %>
      <% end %>
    </h2>

    <p>
      <%= @booking.book.library.user.username %> will get back to you shortly
    </p>

    <p class="mt3 f5 dark-gray lh-title">Pickup location: <strong><%= @booking.book.library.address %></strong></p>
    <p class="f5 dark-gray lh-title">Pick up: <strong><%= l(@booking.checkin_date, format: :custom) %></strong></p>
    <p class="f5 dark-gray lh-title">Return: <strong><%= l(@booking.checkout_date, format: :custom) %></strong></p>

    <%= link_to "Take me to my dashboard", profile_path(current_user), class: "mt3 btn btn-outline"%>

  </header>

  <header class="fl w-100 w-50-ns tc">
    <% if @book.photo? %>
      <%= cl_image_tag @book.photo.path, height: 450, crop: :scale, class: "mt2 pa3" %>
    <% end %>
  </header>
</article>

