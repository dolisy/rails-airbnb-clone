<div class="wrapper">
  <article class="pt3 f4 pb1 dt w-100 bb b--black-70">
    <% if @library.user == current_user %>
      <div class="left black">
        <%= @library.name %> (<%= link_to "edit", edit_library_path(@library)%>)
      </div>
      <div class="right">
        <%= link_to "Add Book +", new_library_book_path(@library) %>
      </div>
      <% else %>
      <div class="left black">
        <%= @library.name %>
      </div>
      <div class="right">
        Number of Books: <%= @library.books.count %>
      </div>
    <% end %>
  </article>

  <section class="cf w-100 pa2-ns">
    <% @library.books.each do |book| %>
      <article class="p2 fl w-100 w-50-m w-25-ns pa2-ns">
        <div class="aspect-ratio aspect-ratio--3x4">
          <% if book.photo? %>
            <%= cl_image_tag book.photo.path, crop: :fit, class: "fit aspect-ratio--object" %>
          <% end %>
        </div>
          <%= link_to book.title, book_path(book), class: "library-title" %>
      </article>
    <% end %>
  </section>
</div>
