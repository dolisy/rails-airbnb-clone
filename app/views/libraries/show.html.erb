<% content_for :meta_title, "Check out #{@library.name} on #{DEFAULT_META["meta_product_name"]}"  %>
<% content_for :meta_description, "Browse through over 1200+ collections of libraries and find the book that reads to you the most right in your area" %>
<% content_for :meta_image, cloudinary_url(@library.books.first.photo) %>
<div class="wrapper">
  <article class="pt3 f4 pb1 dt w-100 bb b--black-70">
    <% if @library.user == current_user %>
      <div class="left black">
        <%= @library.name %> (<%= link_to "edit", edit_library_path(@library)%>)
      </div>
      <div class="right">
        <%= link_to "Add Book +", new_book_path %>
      </div>
      <% else %>
      <div class="left black">
        <%= @library.name %>
      </div>
      <div class="right">
        Number of Books (<%= @library.books.count %>)
      </div>
    <% end %>
  </article>

  <section class="cf w-100 pa2-ns">
    <% @library.books.each do |book| %>
      <article class="p2 fl w-100 w-50-m w-25-ns pa2-ns tc">
        <div class="center">
          <% if book.photo? %>
            <%= cl_image_tag book.photo.path, height: 300, crop: :fill, class: "mb1" %>
          <% end %>
        </div>
          <%= link_to book.title.truncate(53), book_path(book), class: "db link black hover-grey" %>
      </article>
    <% end %>
  </section>
</div>
